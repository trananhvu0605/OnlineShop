@model OnlineShop.Models.LoginModel

@{
    ViewBag.Title = "RegisterClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.name != null)
{
    @section Styles{
        <link rel="stylesheet" type="text/css" href="~/wwwroot/css/detail.css" />
        <link rel="stylesheet" type="text/css" href="~/wwwroot/css/order.css" />
    }
}
else
{
    @section Styles{
        <link rel="stylesheet" type="text/css" href="~/wwwroot/css/detail.css" />
        <link rel="stylesheet" type="text/css" href="~/wwwroot/css/order.css" />
    }
}
<div class="content">
    <div class="content_left" style="height: 500px; overflow-y: hidden;">
        <div class="title_content-left">

            <h4> <i class="fas fa-bars"></i> DANH MỤC SẢN PHẨM</h4>
        </div>
        @{
            Html.RenderAction("ProductCartelogy", "Home");
        }


    </div>
    <div class="content_right">
        <h3 class="content_right-title">Đăng ký tài khoản</h3>
        <div class="content_customer">
            @using (Html.BeginForm("RegisterClient", "Login", FormMethod.Post, htmlAttributes: new { @class = "form_infor", @style = "text-align: center;" }))
            {
                @Html.ValidationSummary(false, "")
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.userName, "Tên tài khoản", htmlAttributes: new { @class = "lable" })
                    @Html.TextBoxFor(model => model.userName, htmlAttributes: new { @class = "text userName", @placeholder = "Tên tài khoản", @style = "padding-left: 5px;outline: none; " })

                </div>
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.Name, "Họ và tên", htmlAttributes: new { @class = "lable" })
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "text Name", @placeholder = "Họ tên", @style = "padding-left: 5px;outline: none; " })

                </div>
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.PhoneNumbers, "Số điện thoại", htmlAttributes: new { @class = "lable" })
                    @Html.TextBoxFor(model => model.PhoneNumbers, htmlAttributes: new { @class = "text PhoneNumbers", @placeholder = "Số điện thoại", @style = "padding-left: 5px;outline: none; " })

                </div>
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.Adress, "Địa chỉ", htmlAttributes: new { @class = "lable" })
                    @Html.TextBoxFor(model => model.Adress, htmlAttributes: new { @class = "text Adress", @placeholder = "Địa chỉ", @style = "padding-left: 5px;outline: none; " })

                </div>
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "lable" })
                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "text Email", @placeholder = "Email", @style = "padding-left: 5px;outline: none; " })

                </div>
                <div class="form_infor-input">
                    @Html.LabelFor(model => model.Password, "Mật khẩu", htmlAttributes: new { @class = "lable" })
                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "text Password", @placeholder = "Mật khẩu", @style = "padding-left: 5px;outline: none; " })

                </div>
                <button class="registerbtn" type="submit" style="width: 80px;height: 32px;border: none;background-color: #92278f;color: #fff;font-size: 14px;">
                    Đăng ký
                </button>
                <a href="/Home/Index" style=" text-decoration: none; font-size: 15px;">Hủy bỏ</a>
            }
        </div>


    </div>



</div>
<script>
    var registerbtn = document.querySelector('.registerbtn');
    var userName = document.querySelector('.userName');
    var Name = document.querySelector('.Name');
    var PhoneNumbers = document.querySelector('.PhoneNumbers');
    var Adress = document.querySelector('.Adress');
    var Email = document.querySelector('.Email');
    var password = document.querySelector('.Password');
    registerbtn.addEventListener('click', () => {
        if (userName.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập tên tài khoản')
        }
        else if (Name.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập họ và tên')
        }
        else if (PhoneNumbers.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập số điện thoại')
        }
        else if (Adress.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập địa chỉ')
        }
        else if (Email.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập email')
        }
        else if (password.value == '') {
            registerbtn.type = 'button';
            alert('Vui lòng nhập mật khẩu')
        }
        else {
            registerbtn.type = 'submit';
        }
    })
</script>