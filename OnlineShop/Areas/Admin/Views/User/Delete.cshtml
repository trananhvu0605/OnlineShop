@model Model.EF.TaiKhoan

@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:100px">

    <h3 style="text-align:center">Bạn có chắc chắn muốn xóa tài khoản này?</h3>
    <div style="width:26%; margin:20px auto 0px auto">
        <div class="dl-horizontal">
            <div style="display:block">
                <b style="margin-right:10px">Tên tài khoản:</b>
                <span>@Html.DisplayFor(model => model.TenTK)</span>
            </div>
            <div>
                <b style="margin-right:10px">@Html.DisplayNameFor(model => model.HoTen):</b>
                <span> @Html.DisplayFor(model => model.HoTen)</span>
            </div>
            <div>
                <b style="margin-right:10px">@Html.DisplayNameFor(model => model.Email):</b>
                <span>@Html.DisplayFor(model => model.Email)</span>
            </div>
            <div>
                <b style="margin-right:10px"> Quyền:</b>
                @if (Model.Quyen == null)
                {
                    <span>Khách hàng</span>
                }
                else
                {
                    <span>Quản trị website</span>
                }

            </div>
        </div>
        @using (Html.BeginForm("Delete", "User", FormMethod.Post, htmlAttributes: new { @style = "margin-top:20px" }))
        {
            @Html.AntiForgeryToken()
            <input name="tentk" value="@Model.TenTK" hidden />
            <input name="hoten" value="@Model.HoTen" hidden />

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
    @if (ViewBag.Error != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
    }
</div>

