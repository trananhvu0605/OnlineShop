@model Model.EF.TaiKhoan

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:80px">
    <h2 style="display: flex; justify-content: center; font-size: 35px; font-weight: 400">Đổi mật khẩu</h2>


    @using (Html.BeginForm("EditPass", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="margin-left: 20px; font-weight: 400 ">Tài khoản</h4>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <input name="TenTK" hidden value="@Model.TenTK" />
            <div class="form-group" style="display: flex; align-items: center; width: 78%;">
                @Html.LabelFor(model => model.Mat_Khau,"Mật khẩu mới", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="Mat_Khau" class="password" type="password" value="" style="width: 100%; padding: 5px 0px 5px 12px; border: 1px solid #ced4da " />
                    @Html.ValidationMessageFor(model => model.Mat_Khau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="display: flex; align-items: center; justify-content: center;">
                    <input type="submit" style="font-size: 18px; margin-top: 22px; background-color: #7c548f; color: #fff;" value="Sửa" class="submitbtn btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href="/Admin/User/Index" style="text-decoration: none; margin-left:20px;">Quay lại</a>
    </div>
</div>


