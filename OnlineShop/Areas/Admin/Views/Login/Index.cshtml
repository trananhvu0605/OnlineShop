@model OnlineShop.Areas.Admin.Data.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title Page-->
    <title>Đăng nhập</title>
    <!-- Fontfaces CSS-->
    <link href="~/Areas/Admin/Assets/css/login.css" rel="stylesheet" media="all">
    <!-- Bootstrap CSS-->
    <link href="~/Areas/Admin/Assets/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Đăng nhập</h5>
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
                        {
                            @Html.ValidationSummary(false,"", new { @class = "text-danger" })
                            <div class="form-label-group">
                                @Html.TextBoxFor(model => model.UserName, new {@id = "inputEmail", @class = "form-control", @placeholder = "Tên tài khoản", @autofocus = "true" })
                                @Html.Label("inputEmail", "Tên tài khoản")
                            </div>

                            <div class="form-label-group">
                                @Html.PasswordFor(model => model.PassWord, new { @id = "inputPassword", @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.Label("inputPassword", "Mật khẩu")
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đăng nhập</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
